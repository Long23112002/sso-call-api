{
    "name": "pdf-viewer",
    "version": "1.0.2",
    "description": "Electron app for API calls without CORS - PDF Viewer",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win"
    },
    "keywords": [
        "electron",
        "api",
        "cors",
        "base64",
        "pdf",
        "viewer"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.7.0"
    },
    "dependencies": {
        "electron-updater": "^6.3.9"
    },
    "build": {
        "appId": "com.pdfviewer.app",
        "productName": "PDF Viewer",
        "publish": {
            "provider": "github",
            "owner": "Long23112002",
            "repo": "sso-call-api"
        },
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!**/*.md",
            "!dist",
            "!node_modules"
        ],
        "npmRebuild": false,
        "mac": {
            "icon": "icon.png",
            "category": "public.app-category.developer-tools",
            "target": [
                "dmg",
                "zip"
            ],
            "identity": null
        },
        "win": {
            "icon": "icon.png",
            "target": [
                "nsis",
                "portable"
            ]
        },
        "linux": {
            "icon": "icon.png",
            "category": "Development",
            "target": [
                "AppImage",
                "deb"
            ]
        }
    }
}